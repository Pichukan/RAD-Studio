<?xml version="1.0" encoding="utf-8" ?>
<codetemplate xmlns="http://schemas.borland.com/Delphi/2005/codetemplates" version="1.0.0">

  <template name="cse" invoke="manual">
    <description>
      CodeSite.SendError(...)
    </description>
    <author>
      Raize Software
    </author>

    <point name="msg">
      <text>
        msg
      </text>
      <hint>
        Error Message
      </hint>
    </point>

    <code language="C" context="methodbody">
      <![CDATA[CodeSite->SendError( "$msg$" );$end$ ]]>
    </code>
  </template>
</codetemplate>